  scan:
    name: gitleaks
    runs-on: ubuntu-latest
    steps:
     - name: Checkout
       uses: actions/checkout@v3
    # - name: Create a new folder
       #run: New-Item -ItemType Directory -Force -Path /home/runner/work/TestPublicProject/TestPublicProject/software
